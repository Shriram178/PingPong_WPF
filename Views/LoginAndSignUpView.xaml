<Window x:Class="BounceBall.Views.LoginAndSignUpView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BounceBall.Views"
        mc:Ignorable="d"
        Title="LoginAndSignUpView"
        Height="450"
        Width="800"
        Name="LoginAndSignUpViewWindow">
    <Window.Resources>
        <Storyboard x:Key="FadeIn">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="0"
                             To="1"
                             Duration="0:0:0.5" />
        </Storyboard>
        <Storyboard x:Key="FadeOut">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="1"
                             To="0"
                             Duration="0:0:0.5" />
        </Storyboard>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <!-- Login Page -->
        <StackPanel Grid.Column="0"
                    Margin="50,10,50,0"
                    x:Name="LoginPanel"
                    Visibility="Visible">
            <TextBlock Text="Login"
                       FontSize="24"
                       HorizontalAlignment="Center"
                       Margin="10" />
            <TextBox x:Name="UsernameLogin"
                     Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}"
                     Margin="10"
                      />
            <Grid Margin="10">
                <TextBox x:Name="PasswordPlaceholderLogin"
                         Text="Password"
                         Foreground="Gray"
                         IsHitTestVisible="False"
                         Visibility="Visible" />
                <PasswordBox x:Name="PasswordLogin"
                             PasswordChanged="PasswordBox_PasswordChanged"
                             
                             />
            </Grid>
            <Button Content="Login"
                    Command="{Binding LoginCommand}"
                    CommandParameter="{x:Reference Name=LoginAndSignUpViewWindow}"
                    Margin="10" />
            <Button Content="Go to Signup"
                    Click="ShowSignupPanel"
                    Margin="10" />
        </StackPanel>
        <!-- Signup Page -->
        <StackPanel Grid.Column="1"
                    Margin="50,10,50,0"
                    x:Name="SignupPanel"
                    Visibility="Collapsed">
            <TextBlock Text="Signup"
                       FontSize="24"
                       HorizontalAlignment="Center"
                       Margin="10" />
            <TextBox x:Name="UsernameSignup"
                     Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}"
                     Margin="10"
                     />
            <Grid Margin="10">
                <TextBox x:Name="PasswordPlaceholderSignup"
                         Text="Password"
                         Foreground="Gray"
                         IsHitTestVisible="False"
                         Visibility="Visible" />
                <PasswordBox x:Name="PasswordSignup"
                             PasswordChanged="PasswordBox_PasswordChanged"
                              />
            </Grid>
            <Grid Margin="10">
                <TextBox x:Name="ConfirmPasswordPlaceholderSignup"
                         Text="Confirm Password"
                         Foreground="Gray"
                         IsHitTestVisible="False"
                         Visibility="Visible" />
                <PasswordBox x:Name="ConfirmPasswordSignup"
                             PasswordChanged="PasswordBox_PasswordChanged"
                              />
            </Grid>
            <TextBlock x:Name="PasswordMismatchWarning"
                       Text="Passwords do not match"
                       Foreground="Red"
                       Visibility="Collapsed"
                       HorizontalAlignment="Center"
                       Margin="10" />
            <Button Content="Signup"
                    Command="{Binding SignUpCommand}"
                    Margin="10" />
            <Button Content="Go to Login"
                    Click="ShowLoginPanel"
                    Margin="10" />
        </StackPanel>
    </Grid>
</Window>

