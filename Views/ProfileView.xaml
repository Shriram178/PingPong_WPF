<Page x:Class="BounceBall.Views.ProfileView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BounceBall.Views"
        mc:Ignorable="d"
        Title="ProfileView" Height="450" Width="800">
    <Grid Margin="10">
        <!-- Define Rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Header -->
            <RowDefinition Height="Auto" />
            <!-- High Score -->
            <RowDefinition Height="*" />
            <!-- Game History -->
        </Grid.RowDefinitions>
        <!-- Define Columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <!-- Header Section -->
        <TextBlock Text="{Binding CurrentUser.UserName}"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#333"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Margin="0,0,0,10" />
        <!-- High Score Section -->
        <GroupBox Header="High Score"
                  Grid.Row="1"
                  FontSize="16"
                  FontWeight="Bold"
                  Foreground="#444"
                  BorderBrush="#cdcdcd"
                  Background="White"
                  Padding="10"
                  Margin="0,10,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Score:"
                           FontWeight="Bold"
                           Grid.Row="0"
                           Grid.Column="0"
                           VerticalAlignment="Center" />
                <TextBlock Text="{Binding HighScore.Score}"
                           Grid.Row="0"
                           Grid.Column="1"
                           VerticalAlignment="Center" />
                <TextBlock Text="Start Time:"
                           FontWeight="Bold"
                           Grid.Row="1"
                           Grid.Column="0"
                           VerticalAlignment="Center" />
                <TextBlock Text="{Binding HighScore.StartTime}"
                           Grid.Row="1"
                           Grid.Column="1"
                           VerticalAlignment="Center" />
                <TextBlock Text="End Time:"
                           FontWeight="Bold"
                           Grid.Row="2"
                           Grid.Column="0"
                           VerticalAlignment="Center" />
                <TextBlock Text="{Binding HighScore.EndTime}"
                           Grid.Row="2"
                           Grid.Column="1"
                           VerticalAlignment="Center" />
                <TextBlock Text="Duration:"
                           FontWeight="Bold"
                           Grid.Row="3"
                           Grid.Column="0"
                           VerticalAlignment="Center" />
                <TextBlock Text="{Binding HighScore.Duration}"
                           Grid.Row="3"
                           Grid.Column="1"
                           VerticalAlignment="Center" />
            </Grid>
        </GroupBox>
        <!-- Game History Section -->
        <GroupBox Header="Game History"
                  Grid.Row="2"
                  FontSize="16"
                  FontWeight="Bold"
                  Foreground="#444"
                  BorderBrush="#cdcdcd"
                  Background="White"
                  Padding="10">
            <ListView Name="UserList"
                      ItemsSource="{Binding GameHistory}"
                      BorderBrush="#cdcdcd"
                      Margin="0"
                      Padding="5">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Score"
                                        DisplayMemberBinding="{Binding Score}" />
                        <GridViewColumn Header="Start Time"
                                        DisplayMemberBinding="{Binding StartTime}" />
                        <GridViewColumn Header="End Time"
                                        DisplayMemberBinding="{Binding EndTime}" />
                        <GridViewColumn Header="Duration"
                                        DisplayMemberBinding="{Binding Duration}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>
    </Grid>
</Page>
