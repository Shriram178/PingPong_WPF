<UserControl x:Class="BounceBall.Views.ProfileView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BounceBall.Views"
        mc:Ignorable="d">
    <Grid Margin="20"
          Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Header -->
            <RowDefinition Height="Auto" />
            <!-- Filters -->
            <RowDefinition Height="Auto" />
            <!-- High Score -->
            <RowDefinition Height="*" />
            <!-- Game History -->
            <RowDefinition Height="Auto" />
            <!-- Pagination -->
        </Grid.RowDefinitions>
        <!-- Header and Back Button -->
        <DockPanel Grid.Row="0"
                   Margin="0,0,0,10">
            <Button Content="⟵ Back"
                    x:Name="GoBack"
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"
                    Padding="8,2" />
            <TextBlock Text="{Binding CurrentUser.UserName}"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#333"
                       VerticalAlignment="Center" />
        </DockPanel>
        <!-- Filters Section -->
        <GroupBox Header="Filters"
                  Grid.Row="1"
                  Margin="0,0,0,10"
                  Padding="10"
                  Background="#f9f9f9"
                  BorderBrush="#ccc">
            <UniformGrid Columns="6"
                         Rows="1"
                         Margin="0">
                <StackPanel>
                    <TextBlock Text="Sort By"
                               Margin="0,0,0,5" />
                    <ComboBox ItemsSource="{Binding SortColumns}"
                              SelectedItem="{Binding SelectedSortColumn}"
                              Width="120" />
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Order"
                               Margin="0,0,0,5" />
                    <ComboBox ItemsSource="{Binding SortOrders}"
                              SelectedItem="{Binding SelectedSortOrder}"
                              Width="100" />
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Page Size"
                               Margin="0,0,0,5" />
                    <TextBox Text="{Binding PageSize, UpdateSourceTrigger=PropertyChanged}"
                             Width="60" />
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Filter"
                               Margin="0,0,0,5" />
                    <TextBox Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"
                             Width="150" />
                </StackPanel>
            </UniformGrid>
        </GroupBox>
        <!-- High Score Section -->
        <GroupBox Header="High Score"
                  Grid.Row="2"
                  FontSize="16"
                  FontWeight="Bold"
                  Foreground="#444"
                  BorderBrush="#cdcdcd"
                  Background="#fdfdfd"
                  Padding="10"
                  Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Score:"
                           Grid.Row="0"
                           Grid.Column="0"
                           FontWeight="Bold" />
                <TextBlock Text="{Binding HighScore.Score}"
                           Grid.Row="0"
                           Grid.Column="1" />
                <TextBlock Text="Start Time:"
                           Grid.Row="1"
                           Grid.Column="0"
                           FontWeight="Bold" />
                <TextBlock Text="{Binding HighScore.PlayedAt}"
                           Grid.Row="1"
                           Grid.Column="1" />
                <TextBlock Text="Duration:"
                           Grid.Row="2"
                           Grid.Column="0"
                           FontWeight="Bold" />
                <TextBlock Text="{Binding HighScore.Duration}"
                           Grid.Row="2"
                           Grid.Column="1" />
            </Grid>
        </GroupBox>
        <!-- Game History Section -->
        <GroupBox Header="Game History"
                  Grid.Row="3"
                  FontSize="16"
                  FontWeight="Bold"
                  Foreground="#444"
                  BorderBrush="#cdcdcd"
                  Background="White"
                  Padding="10"
                  Margin="0,0,0,10">
            <ListView Name="UserList"
                      ItemsSource="{Binding GameHistory}"
                      BorderBrush="#cdcdcd"
                      Margin="0"
                      Padding="5">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Score"
                                        DisplayMemberBinding="{Binding Score}" />
                        <GridViewColumn Header="Start Time"
                                        DisplayMemberBinding="{Binding PlayedAt}" />
                        <GridViewColumn Header="Duration"
                                        DisplayMemberBinding="{Binding Duration}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>
        <!-- Pagination Controls -->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,10">
            <Button Content="◀ Previous"
                    x:Name="PrevPage"
                    Margin="5"
                    Padding="5,2" />
            <TextBlock Text="{Binding PageIndex}"
                       VerticalAlignment="Center"
                       FontWeight="Bold"
                       Margin="10,0" />
            <Button Content="Next ▶"
                    x:Name="NextPage"
                    Margin="5"
                    Padding="5,2" />
        </StackPanel>
    </Grid>
</UserControl>
